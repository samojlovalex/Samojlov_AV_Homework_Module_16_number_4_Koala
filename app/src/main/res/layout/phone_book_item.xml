<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/containerToolbarCW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nameTV_Hint"
                android:textColor="@color/Blue"
                android:textSize="@dimen/name_phone_book_textSize"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:hint="@string/phoneTV_Hint"
                android:textColor="@color/black"
                android:textSize="@dimen/phone_phone_book_textSize"
                android:textStyle="italic"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/phone_phone_marginTop_icon"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/callPhoneIV"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/phone_phone_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:src="@drawable/call_icon"></ImageView>

                <ImageView
                    android:id="@+id/smsPhoneIV"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/phone_phone_icon_size"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="1"
                    android:src="@drawable/sms_icon"></ImageView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>